               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTGroup"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.default"
               definitionId="eu.modelwriter.smtlib.commands.RunSolver">
               <!-- <dynamic class="eu.modelwriter.smtlib.MenuActions$Solvers"
                    id="eu.modelwriter.smtlib.MenuActions,Solvers"/> -->
         </action>
         <!-- NOTE: for the following, the string following the last . of the id must be the name of the solver -->
         <action
               label="Z3-4.3"
               tooltip="Runs the Z3-4.3 SMT solver"
               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTSolvers"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.z3_4_3"
               definitionId="eu.modelwriter.smtlib.commands.RunZ3_4_3">
         </action>
         <action
               label="Z3-4.4"
               tooltip="Runs the Z3-4.4 SMT solver"
               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTSolvers"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.z3_4_4"
               definitionId="eu.modelwriter.smtlib.commands.RunZ3_4_4">
         </action>
         <action
               label="CVC"
               tooltip="Runs the CVC SMT solver"
               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTSolvers"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.cvc"
               definitionId="eu.modelwriter.smtlib.commands.RunCVC">
         </action>
         <action
               label="Yices"
               tooltip="Runs the Yices SMT solver"
               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTSolvers"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.yices"
               definitionId="eu.modelwriter.smtlib.commands.RunYices">
         </action>
         <action
               label="Simplify"
               tooltip="Runs the Simplify SMT solver"
               class="eu.modelwriter.smtlib.MenuActions$RunSolver"
               menubarPath="SMTMenu/SMTSolvers"
               id="eu.modelwriter.smtlib.MenuActions.RunSolver.simplify"
